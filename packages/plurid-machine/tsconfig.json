{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],


        "baseUrl": ".",
        "paths": {
            "~source/*": [
                "./source/*"
            ],
            "~renderer-assets/*": [
                "./source/renderer/modules/assets/*"
            ],
            "~renderer-data/*": [
                "./source/renderer/modules/data/*"
            ],
            "~renderer-components/*": [
                "./source/renderer/modules/components/*"
            ],
            "~renderer-containers/*": [
                "./source/renderer/modules/containers/*"
            ],
            "~renderer-services/*": [
                "./source/renderer/modules/services/*"
            ],
        },


        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "source"
    ]
}
